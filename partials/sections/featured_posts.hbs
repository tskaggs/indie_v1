{{#get "posts" filter="featured:true" limit="all" include="tags" as |featured|}}
  <section class="flex font-sans pb-5">
    <div class="flex flex-wrap">
      <div class="flex-auto text-lg font-bold text-slate-900">
        <div class="flex justify-between pb-2">
          <div>⭐️ Featured Posts</div>
          {{!-- <div>All <span class="h-3 w-2 inline-block ml-3">{{> "icons/arrow-right"}}</span></div> --}}
        </div>
      </div>
      {{#if featured}}
      {{#foreach featured}}
      <a href="{{url}}" class="flex-auto p-6 hover:ring-blue-500 hover:shadow-md group rounded-md bg-white ring-1 ring-slate-200 shadow-sm">
        <div class="flex flex-wrap">
          <div class="flex-auto text-base font-medium text-slate-900">
            📄 {{title}}
          </div>
          <p class="w-full flex-none text-base font-normal text-slate-700 mt-2">
            {{excerpt words="26"}}
          </p>
          <div class="w-full flex-none text-sm font-light text-slate-700 mt-2">
            <time datetime="{{date format='YYYY-MM-DD'}}">
              {{date format="DD MMMM YYYY"}} -
            </time>
            {{reading_time}}
            {{authors separator=" | "}}
          </div>
          {{!-- {{> "tags"}} --}}
        </div>
      </a>
      {{/foreach}}
      {{else}}
      <span class="flex-auto text-base font-bold text-slate-900">
        No featured posts at this time. 😅
      </span>
      {{/if}}
    </div>
  </section>
{{/get}}