{
    "name": "india-theme",
    "description": "Ghost theme for indie hackers, builders, and bootstrappers.",
    "demo": "https://starter.ghost.io",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=4.0.0",
        "ghost-api": "v4"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
    },
    "author": {
        "name": "Tim Skaggs",
        "email": "team@timskaggs.com",
        "url": "https://timskaggs.com"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine",
            "Blog",
            "Indie",
            "Bootstrapper"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "indie",
        "bootstrapper"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/tskaggs/indie.git"
    },
    "bugs": "https://github.com/tskaggs/indie/issues",
    "contributors": "https://github.com/tskaggs/indie/graphs/contributors",
    "devDependencies": {
        "autoprefixer": "10.4.2",
        "beeper": "2.1.0",
        "cssnano": "5.0.17",
        "gscan": "4.22.0",
        "gulp": "4.0.2",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.1",
        "gulp-sourcemaps": "3.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-util": "3.0.8",
        "gulp-watch": "5.0.1",
        "gulp-zip": "5.1.0",
        "postcss": "8.4.6",
        "postcss-color-mod-function": "3.0.3",
        "postcss-easy-import": "3.0.0"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 15,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        },
        "custom": {
            "show_mrr": {
                "type": "boolean",
                "default": false,
                "group": "homepage"
            },
            "current_mrr": {
                "type": "text",
                "default": "0",
                "group": "homepage"
            },
            "goal_mrr": {
                "type": "text",
                "default": "0",
                "group": "homepage"
            }
        }
    },
    "dependencies": {
        "@tailwindcss/forms": "^0.4.0",
        "@tailwindcss/typography": "^0.5.2",
        "tailwindcss": "^3.0.23"
    }
}
